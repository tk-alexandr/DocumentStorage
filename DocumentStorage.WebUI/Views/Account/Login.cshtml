@model DocumentStorage.WebUI.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2 class="m-1">Для дальнейшей работы войдите в систему</h2>
<p><hr /></p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label for="userNameField">Логин</label>

        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "userNameField", @placeholder = "Логин" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
    <div class="form-group">
        <label for="passwordField">Пароль</label>

        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "passwordField", @placeholder = "Пароль" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <p><input type="submit" class="btn btn-primary" value="Вход" /></p>
}
